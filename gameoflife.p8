pico-8 cartridge // http://www.pico-8.com
version 42
__lua__

grid = {}
t=0

function _init()
	for i=1,128 do
	 grid[i] = {}
		for j=1,128 do
			grid[i][j] = flr(rnd(2))
		end
	end
	draw()
	_draw = draw
	_update = update
end

function draw()
 for i=1,128 do
		for j=1,128 do
			pset(i-1,j-1,grid[i][j]*9)
		end
	end
end

function update()
	if t%2 == 0 then
		for i=1,128 do
			for j=1,128 do
				result(i,j)
			end
		end
	end
	t+=1
end

function result(x,y)
	nei = 0
 
 for i = -1,1 do
 	for j = -1,1 do
 		if x>1 and y>1 and x<128 and y<128 then
 		 if i == 0 and j == 0 then
 		 	
    else
 		 	if pget(x-1+i,y-1+j) >0 then
 		 		nei += 1
    	end
    end
			end
		end
 end
 
	if nei<2 then
		grid[x][y] = 0
	elseif nei == 3 then
	 grid[x][y] = 1
	elseif nei == 2 and pget(x-1,y-1) > 0 then
		grid[x][y] = 1
	elseif nei > 3 and pget(x-1,y-1) > 0 then
	--else
	 grid[x][y] = 0
	end
end
